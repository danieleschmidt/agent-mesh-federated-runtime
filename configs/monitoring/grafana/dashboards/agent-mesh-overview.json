{
  "dashboard": {
    "id": null,
    "title": "Agent Mesh Federated Runtime - Overview",
    "tags": ["agent-mesh", "overview", "federated-learning", "p2p"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up{job=~\"agent-mesh.*\"}, instance)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        },
        {
          "name": "node_type",
          "type": "query",
          "query": "label_values(mesh_node_info, node_type)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "ðŸŒ Network Overview",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
        "datasource": null,
        "collapsed": false
      },
      {
        "id": 2,
        "title": "Active Nodes",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 1},
        "targets": [
          {
            "expr": "sum(up{job=~\"agent-mesh.*\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "green", "value": 3}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "horizontal"
        }
      },
      {
        "id": 3,
        "title": "Network Connectivity",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 1},
        "targets": [
          {
            "expr": "avg(mesh_node_peer_count)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "green", "value": 2}
              ]
            },
            "unit": "short",
            "decimals": 1
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center"
        }
      },
      {
        "id": 4,
        "title": "Message Throughput",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 1},
        "targets": [
          {
            "expr": "sum(rate(mesh_messages_total[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "ops"
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center"
        }
      },
      {
        "id": 5,
        "title": "Consensus Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 1},
        "targets": [
          {
            "expr": "mesh_consensus_active",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"type": "value", "value": "0", "text": "INACTIVE"},
              {"type": "value", "value": "1", "text": "ACTIVE"}
            ]
          }
        },
        "options": {
          "colorMode": "background",
          "justifyMode": "center"
        }
      },
      {
        "id": 6,
        "title": "ðŸ¤– Federated Learning",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 9},
        "collapsed": false
      },
      {
        "id": 7,
        "title": "Training Progress",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 10},
        "targets": [
          {
            "expr": "mesh_fl_model_accuracy",
            "refId": "A",
            "legendFormat": "Model Accuracy"
          },
          {
            "expr": "mesh_fl_model_loss",
            "refId": "B",
            "legendFormat": "Model Loss"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "pointSize": 5,
              "showPoints": "auto"
            },
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Model Loss"},
              "properties": [{"id": "custom.axisPlacement", "value": "right"}]
            }
          ]
        }
      },
      {
        "id": 8,
        "title": "Participation Rate",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 10},
        "targets": [
          {
            "expr": "mesh_fl_participation_rate * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 50},
                {"color": "green", "value": 80}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 9,
        "title": "Current Round",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 10},
        "targets": [
          {
            "expr": "mesh_fl_current_round",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        },
        "options": {
          "colorMode": "value",
          "justifyMode": "center"
        }
      },
      {
        "id": 10,
        "title": "Round Duration",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 14},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(mesh_fl_round_duration_seconds_bucket[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "s"
          }
        },
        "options": {
          "colorMode": "value",
          "justifyMode": "center"
        }
      },
      {
        "id": 11,
        "title": "ðŸ“Š Performance Metrics",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 18},
        "collapsed": false
      },
      {
        "id": 12,
        "title": "CPU Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 19},
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\", instance=~\"$instance\"}[5m])) * 100)",
            "refId": "A",
            "legendFormat": "{{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 13,
        "title": "Memory Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 19},
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes{instance=~\"$instance\"} / node_memory_MemTotal_bytes{instance=~\"$instance\"})) * 100",
            "refId": "A",
            "legendFormat": "{{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 14,
        "title": "Network I/O",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 19},
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total{instance=~\"$instance\"}[5m])",
            "refId": "A",
            "legendFormat": "RX {{instance}}"
          },
          {
            "expr": "-rate(node_network_transmit_bytes_total{instance=~\"$instance\"}[5m])",
            "refId": "B",
            "legendFormat": "TX {{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            },
            "unit": "Bps"
          }
        }
      },
      {
        "id": 15,
        "title": "ðŸ”’ Security & Health",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 27},
        "collapsed": false
      },
      {
        "id": 16,
        "title": "Authentication Status",
        "type": "timeseries",
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "rate(mesh_authentication_success_total[5m])",
            "refId": "A",
            "legendFormat": "Success"
          },
          {
            "expr": "rate(mesh_authentication_failures_total[5m])",
            "refId": "B",
            "legendFormat": "Failures"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "ops"
          }
        }
      },
      {
        "id": 17,
        "title": "Certificate Expiry",
        "type": "table",
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 28},
        "targets": [
          {
            "expr": "(mesh_certificate_expiry_timestamp - time()) / 86400",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 7},
                {"color": "green", "value": 30}
              ]
            },
            "unit": "d"
          }
        },
        "options": {
          "showHeader": true
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "instance": "Instance",
                "Value": "Days to Expiry"
              }
            }
          }
        ]
      },
      {
        "id": 18,
        "title": "Health Check Status",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 28},
        "targets": [
          {
            "expr": "mesh_health_check_status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"type": "value", "value": "0", "text": "UNHEALTHY"},
              {"type": "value", "value": "1", "text": "HEALTHY"}
            ]
          }
        },
        "options": {
          "colorMode": "background",
          "justifyMode": "center"
        }
      },
      {
        "id": 19,
        "title": "ðŸ“ˆ Network Topology",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 34},
        "collapsed": false
      },
      {
        "id": 20,
        "title": "Network Graph",
        "type": "nodeGraph",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 35},
        "targets": [
          {
            "expr": "mesh_node_connections",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"}
          }
        },
        "options": {
          "nodes": {
            "mainStatUnit": "short"
          },
          "edges": {
            "mainStatUnit": "short"
          }
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "enable": true,
          "expr": "changes(mesh_build_info[5m]) > 0",
          "iconColor": "blue",
          "titleFormat": "Deployment"
        },
        {
          "name": "Alerts",
          "datasource": "prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\"}",
          "iconColor": "red",
          "titleFormat": "{{alertname}}"
        }
      ]
    }
  }
}